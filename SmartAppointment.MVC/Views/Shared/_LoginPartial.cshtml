
@if(Context.User.Identity.Name != null)
{
 <form asp-controller="Login" asp-action="Logout" method="post" id="LogoutForm" class="navbar-right">
     <ul class=" nav navbar-nav navbar-right">
         <li>
             Hello @Context.User.Identity.Name!
         </li>
         <li>
             <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
         </li>
     </ul>
 </form>   
}else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller ="Register" asp-action="Register">Register</a></li>
        <li><a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Log in</a></li>
    </ul>
}