@{
    ViewData["Title"] = "Welcome";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Name != null && ViewBag.Role != null)
{
    <div class="alert alert-success">
        Welcome back, <strong>@ViewBag.Name</strong>! You are logged in as <strong>@ViewBag.Role</strong>.
    </div>
}
else
{
    <div class="alert alert-warning">
        Could not retrieve your user info. Please try logging in again.
    </div>
}
