
@model IEnumerable<SmartAppointment.MVC.Models.Appointment>

@{
    ViewData["Title"] = "All Appointments";
}

<h2>All Appointments</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User</th>
                <th>Consultant</th>
                <th>Date</th>
                <th>Expertise</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User.Name</td>
                    <td>@item.Consultant.user.Name</td>
                    <td>@item.AppointmentDate.ToString("f")</td>
                    <td>@item.Consultant.ExpertiseArea</td>
                    <td>
                        <form asp-action="DeleteAppointment" method="post" asp-controller="Admin">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this appointment?');">
                                Delete
                            </button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found.</p>
}